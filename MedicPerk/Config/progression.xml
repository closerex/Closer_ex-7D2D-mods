<configs>
	<insertAfter xpath="/progression/skills/skill[@name='skillWasteTreasures']">
		<skill name="skillTeamplayer" name_key="skillTeamplayerName" desc_key="skillTeamplayerDesc" icon="icon_medic_teamplayer" parent="attIntellect">
			<!--The Teamplayer-->
			<effect_group/>
		</skill>
		<skill name="skillSurvivor" name_key="skillSurvivorName" desc_key="skillSurvivorDesc" icon="icon_medic_survivor" parent="attIntellect">
			<!--The Survivor-->
			<effect_group/>
		</skill>
	</insertAfter>
	<insertBefore xpath="/progression/perks/perk[@name='perkFiremansAlmanacHeat']">	
		<perk name="perkMedic" name_key="perkMedicBasicName" desc_key="perkMedicBasicDesc" min_level="1" max_level="6" base_skill_point_cost="5" cost_multiplier_per_level="1" icon="icon_perkmedic" parent="attIntellect">
			<!--The Medic-->
			<level_requirements level="1"><requirement name="ProgressionLevel" progression_name="perkPhysician" operation="GTE" value="0" desc_key="no req"/></level_requirements>
			<level_requirements level="2"><requirement name="ProgressionLevel" progression_name="perkPhysician" operation="GTE" value="1" desc_key="reqPhysicianLevel04"/></level_requirements>
			<level_requirements level="3"><requirement name="ProgressionLevel" progression_name="perkPhysician" operation="GTE" value="2" desc_key="reqPhysicianLevel04"/></level_requirements>
			<level_requirements level="4"><requirement name="ProgressionLevel" progression_name="perkPhysician" operation="GTE" value="3" desc_key="reqPhysicianLevel04"/></level_requirements>
			<level_requirements level="5"><requirement name="ProgressionLevel" progression_name="perkPhysician" operation="GTE" value="4" desc_key="reqPhysicianLevel04"/></level_requirements>
			<level_requirements level="6"><requirement name="ProgressionLevel" progression_name="perkPhysician" operation="GTE" value="4" desc_key="reqPhysicianLevel04"/></level_requirements>
			<effect_group>
				<effect_description level="1" desc_key="perkMedicBasicLv1Desc" long_desc_key="perkMedicBasicLv1LongDesc"/>
				<effect_description level="2" desc_key="perkMedicBasicLv2Desc" long_desc_key="perkMedicBasicLv2LongDesc"/>
				<effect_description level="3" desc_key="perkMedicBasicLv3Desc" long_desc_key="perkMedicBasicLv3LongDesc"/>
				<effect_description level="4" desc_key="perkMedicBasicLv4Desc" long_desc_key="perkMedicBasicLv4LongDesc"/>
				<effect_description level="5" desc_key="perkMedicBasicLv5Desc" long_desc_key="perkMedicBasicLv5LongDesc"/>
				<effect_description level="6" desc_key="perkMedicBasicLv6Desc" long_desc_key="perkMedicBasicLv6LongDesc"/>
			</effect_group>
			<effect_group>
				<triggered_effect trigger="onPerkLevelChanged" action="AddBuff" buff="buffCheckMedicLv"/>
				<!-- <passive_effect name="CraftingTier" operation="base_set" level="1,2,3,4,5,6" value="1,2,3,4,5,6" tags="medicgun"/> -->
				<passive_effect name="RecipeTagUnlocked" operation="base_set" level="5,6" value="1" tags="medicgrenade"/>
			</effect_group>
			<effect_group>
				<requirement name="ProgressionLevel" progression_name="perkMedic" operation="GTE" value="6"/>
				<requirement name="IsAlive" target="other"/>
				<requirement name="ItemHasTags" tags="medicgun"/>
				<requirement name="CVarCompare" cvar="isHealMode" operation="Equals" value="1"/>
					<triggered_effect trigger="onSelfAttackedOther" action="AddBuff" target="other" target_tags="player,npc" buff="buffMedicEliteHealing">
						<requirement name="ProgressionLevel" progression_name="perkMedicTeamplayer5" operation="Equals" value="0"/>
					</triggered_effect>
					<triggered_effect trigger="onSelfAttackedOther" action="AddBuffToTargetAndSelf,MedicPerk" target="other" target_tags="player,npc" buff="buffMedicEliteHealing">
						<requirement name="ProgressionLevel" progression_name="perkMedicTeamplayer5" operation="Equals" value="1"/>
					</triggered_effect>
			</effect_group>
			<effect_group>
				<requirement name="!HasBuff" buff="buffZedTimeCooldown"/>
				<requirement name="ItemHasTags" tags="medicgun"/>
				<requirement name="RandomRoll" seed_type="Random" min_max="0,100" operation="LTE" value="@$zedTimeTriggerChanceMedic"/>
					<triggered_effect trigger="onSelfKilledOther" action="AddBuff" target="self" buff="buffZedTimeCooldown"/>
					<triggered_effect trigger="onSelfKilledOther" action="AddBuff" target="selfAOE" target_tags="player" buff="buffZedTimeCooldown" range="60"/>
					<triggered_effect trigger="onSelfKilledOther" action="AddBuff" target="selfAOE" target_tags="enemy" buff="buffZedTime" range="60"/>
			</effect_group>
		</perk>
		<perk name="perkMedicTeamplayer1" name_key="perkMedicTeamplayer1Name" desc_key="perkMedicTeamplayer1Desc" max_level="1" icon="icon_tp_symbiotic" parent="skillTeamplayer">
			<!--Symbiotic Health-->
			<!--Healing teammate with medic guns heals yourself 15 hp-->
			<level_requirements level="1">
				<requirement name="ProgressionLevel" progression_name="perkMedic" operation="GTE" value="2" desc_key="reqMedicLevel02"/>
			</level_requirements>
			<effect_group>
				<effect_description desc_key="perkMedicTeamplayer1Name" long_desc_key="perkMedicTeamplayer1LongDesc" level="1"/>
			</effect_group>
			<effect_group>
				<triggered_effect trigger="onPerkLevelChanged" action="DecreaseProgressionLevelAndRefundSP,MedicPerk" progression_name="perkMedicSurvivor1" level="0">
					<requirement name="ProgressionLevel" progression_name="perkMedicTeamplayer1" operation="GTE" value="1"/>
				</triggered_effect>
			</effect_group>
		</perk>
		<perk name="perkMedicTeamplayer2" name_key="perkMedicTeamplayer2Name" desc_key="perkMedicTeamplayer2Desc" max_level="1" icon="icon_tp_adrenaline" parent="skillTeamplayer">
			<!--Adrenaline Shot-->
			<!--Shoot your teammates with healing dart increase their movement speed 20% for 8s.-->
			<level_requirements level="1">
				<requirement name="ProgressionLevel" progression_name="perkMedic" operation="GTE" value="3" desc_key="reqMedicLevel03"/>
			</level_requirements>
			<effect_group>
				<effect_description desc_key="perkMedicTeamplayer2Name" long_desc_key="perkMedicTeamplayer2LongDesc" level="1"/>
			</effect_group>
			<effect_group>
				<requirement name="ProgressionLevel" progression_name="perkMedicTeamplayer2" operation="Equals" value="1"/>
				<requirement name="IsAlive" target="other"/>
				<requirement name="ItemHasTags" tags="medicgun"/>
				<requirement name="CVarCompare" cvar="isHealMode" operation="Equals" value="1"/>
					<triggered_effect trigger="onSelfAttackedOther" action="AddBuff" target="other" target_tags="player,npc" buff="buffMedicAdrenaline">
						<requirement name="ProgressionLevel" progression_name="perkMedicTeamplayer5" operation="Equals" value="0"/>
					</triggered_effect>
					<triggered_effect trigger="onSelfAttackedOther" action="AddBuffToTargetAndSelf,MedicPerk" target="other" target_tags="player,npc" buff="buffMedicAdrenaline">
						<requirement name="ProgressionLevel" progression_name="perkMedicTeamplayer5" operation="Equals" value="1"/>
					</triggered_effect>
			</effect_group>
			<effect_group>
				<triggered_effect trigger="onPerkLevelChanged" action="DecreaseProgressionLevelAndRefundSP,MedicPerk" progression_name="perkMedicSurvivor2" level="0">
					<requirement name="ProgressionLevel" progression_name="perkMedicTeamplayer2" operation="GTE" value="1"/>
				</triggered_effect>
			</effect_group>
		</perk>
		<perk name="perkMedicTeamplayer3" name_key="perkMedicTeamplayer3Name" desc_key="perkMedicTeamplayer3Desc" max_level="1" icon="icon_tp_lifetras" parent="skillTeamplayer">
			<!--Life Transition-->
			<!--When you receive healing at full hp, all the health regen turns into medic stock gradually.-->
			<level_requirements level="1">
				<requirement name="ProgressionLevel" progression_name="perkMedic" operation="GTE" value="4" desc_key="reqMedicLevel04"/>
			</level_requirements>
			<effect_group>
				<effect_description desc_key="perkMedicTeamplayer3Name" long_desc_key="perkMedicTeamplayer3LongDesc" level="1"/>
			</effect_group>
			<effect_group>
				<triggered_effect trigger="onPerkLevelChanged" action="DecreaseProgressionLevelAndRefundSP,MedicPerk" progression_name="perkMedicSurvivor3" level="0">
					<requirement name="ProgressionLevel" progression_name="perkMedicTeamplayer3" operation="GTE" value="1"/>
				</triggered_effect>
			</effect_group>
		</perk>
		<perk name="perkMedicTeamplayer4" name_key="perkMedicTeamplayer4Name" desc_key="perkMedicTeamplayer4Desc" max_level="1" icon="icon_tp_focus" parent="skillTeamplayer">
			<!--Focus Injection-->
			<!--Shooting teammates with healing darts increases the damage they inflict 20% for 8 seconds.-->
			<level_requirements level="1">
				<requirement name="ProgressionLevel" progression_name="perkMedic" operation="GTE" value="5" desc_key="reqMedicLevel05"/>
			</level_requirements>
			<effect_group>
				<effect_description desc_key="perkMedicTeamplayer4Name" long_desc_key="perkMedicTeamplayer4LongDesc" level="1"/>
			</effect_group>
			<effect_group>
				<requirement name="ProgressionLevel" progression_name="perkMedicTeamplayer4" operation="Equals" value="1"/>
				<requirement name="IsAlive" target="other"/>
				<requirement name="ItemHasTags" tags="medicgun"/>
				<requirement name="CVarCompare" cvar="isHealMode" operation="Equals" value="1"/>
					<triggered_effect trigger="onSelfAttackedOther" action="AddBuff" target="other" target_tags="player,npc" buff="buffMedicFocus">
						<requirement name="ProgressionLevel" progression_name="perkMedicTeamplayer5" operation="Equals" value="0"/>
					</triggered_effect>
					<triggered_effect trigger="onSelfAttackedOther" action="AddBuffToTargetAndSelf,MedicPerk" target="other" target_tags="player,npc" buff="buffMedicFocus">
						<requirement name="ProgressionLevel" progression_name="perkMedicTeamplayer5" operation="Equals" value="1"/>
					</triggered_effect>
			</effect_group>
			<effect_group>
				<triggered_effect trigger="onPerkLevelChanged" action="DecreaseProgressionLevelAndRefundSP,MedicPerk" progression_name="perkMedicSurvivor4" level="0">
					<requirement name="ProgressionLevel" progression_name="perkMedicTeamplayer4" operation="GTE" value="1"/>
				</triggered_effect>
			</effect_group>
		</perk>
		<perk name="perkMedicTeamplayer5" name_key="perkMedicTeamplayer5Name" desc_key="perkMedicTeamplayer5Desc" max_level="1" icon="icon_tp_skin" parent="skillTeamplayer">
			<!--Shiny Skin-->
			<!--Shooting teammates with healing darts remove bleeding. All buffs you apply to teammates will apply on yourself too.-->
			<level_requirements level="1">
				<requirement name="ProgressionLevel" progression_name="perkMedic" operation="GTE" value="6" desc_key="reqMedicLevel06"/>
			</level_requirements>
			<effect_group>
				<effect_description desc_key="perkMedicTeamplayer5Name" long_desc_key="perkMedicTeamplayer5LongDesc" level="1"/>
			</effect_group>
			<effect_group>
				<requirement name="ProgressionLevel" progression_name="perkMedicTeamplayer5" operation="Equals" value="1"/>
				<requirement name="IsAlive" target="other"/>
				<requirement name="ItemHasTags" tags="medicgun"/>
				<requirement name="CVarCompare" cvar="isHealMode" operation="Equals" value="1"/>
					<triggered_effect trigger="onSelfAttackedOther" action="RemoveBuff" target="other" target_tags="npc,ally" buff="buffInjuryBleeding"/>
					<triggered_effect trigger="onSelfAttackedOther" action="AddBuff" target="other" target_tags="npc,ally" buff="buffInjuryAbrasionTreated">
						<requirement name="HasBuff" target="other" buff="buffInjuryAbrasion"/>
					</triggered_effect>
			</effect_group>
			<effect_group>
				<triggered_effect trigger="onPerkLevelChanged" action="DecreaseProgressionLevelAndRefundSP,MedicPerk" progression_name="perkMedicSurvivor5" level="0">
					<requirement name="ProgressionLevel" progression_name="perkMedicTeamplayer5" operation="GTE" value="1"/>
				</triggered_effect>
			</effect_group>
		</perk>
		
		<perk name="perkMedicSurvivor1" name_key="perkMedicSurvivor1Name" desc_key="perkMedicSurvivor1Desc" max_level="1" icon="icon_sv_vampire" parent="skillSurvivor">
			<!--Mine Now-->
			<!--Healing darts hit on zombie heal you.-->
			<level_requirements level="1">
				<requirement name="ProgressionLevel" progression_name="perkMedic" operation="GTE" value="2" desc_key="reqMedicLevel02"/>
			</level_requirements>
			<effect_group>
				<effect_description desc_key="perkMedicSurvivor1Name" long_desc_key="perkMedicSurvivor1LongDesc" level="1"/>
			</effect_group>
			<effect_group>
				<triggered_effect trigger="onPerkLevelChanged" action="DecreaseProgressionLevelAndRefundSP,MedicPerk" progression_name="perkMedicTeamplayer1" level="0">
					<requirement name="ProgressionLevel" progression_name="perkMedicSurvivor1" operation="GTE" value="1"/>
				</triggered_effect>
			</effect_group>
		</perk>
		<perk name="perkMedicSurvivor2" name_key="perkMedicSurvivor2Name" desc_key="perkMedicSurvivor2Desc" max_level="1" icon="icon_sv_rot" parent="skillSurvivor">
			<!--Rotten Rot-->
			<!--Medic guns deals 20% more damage on poisoned targets.-->
			<level_requirements level="1">
				<requirement name="ProgressionLevel" progression_name="perkMedic" operation="GTE" value="3" desc_key="reqMedicLevel03"/>
			</level_requirements>
			<effect_group>
				<effect_description desc_key="perkMedicSurvivor2Name" long_desc_key="perkMedicSurvivor2LongDesc" level="1"/>
			</effect_group>
			<effect_group>
				<triggered_effect trigger="onPerkLevelChanged" action="DecreaseProgressionLevelAndRefundSP,MedicPerk" progression_name="perkMedicTeamplayer2" level="0">
					<requirement name="ProgressionLevel" progression_name="perkMedicSurvivor2" operation="GTE" value="1"/>
				</triggered_effect>
			</effect_group>
			<effect_group name="damage">
				<requirement name="CVarCompare" target="other" cvar="medicPoisonStack" operation="GT" value="0"/>
				<requirement name="ProgressionLevel" progression_name="perkMedicSurvivor2" operation="Equals" value="1"/>
				<requirement name="ItemHasTags" tags="medicgun"/>
					<passive_effect name="DamageModifier" operation="perc_add" value=".25"/>
			</effect_group>
		</perk>
		<perk name="perkMedicSurvivor3" name_key="perkMedicSurvivor3Name" desc_key="perkMedicSurvivor3Desc" max_level="1" icon="icon_sv_stock" parent="skillSurvivor">
			<!--Survival Instinct-->
			<!--Killing target with medic guns doubles medic stock regeneration for 8s.-->
			<level_requirements level="1">
				<requirement name="ProgressionLevel" progression_name="perkMedic" operation="GTE" value="4" desc_key="reqMedicLevel04"/>
			</level_requirements>
			<effect_group>
				<effect_description desc_key="perkMedicSurvivor3Name" long_desc_key="perkMedicSurvivor3LongDesc" level="1"/>
			</effect_group>
			<effect_group>
				<triggered_effect trigger="onPerkLevelChanged" action="DecreaseProgressionLevelAndRefundSP,MedicPerk" progression_name="perkMedicTeamplayer3" level="0">
					<requirement name="ProgressionLevel" progression_name="perkMedicSurvivor3" operation="GTE" value="1"/>
				</triggered_effect>
			</effect_group>
			<effect_group>
				<requirement name="ProgressionLevel" progression_name="perkMedicSurvivor3" operation="GTE" value="1"/>
				<requirement name="ItemHasTags" tags="medicgun"/>
					<triggered_effect trigger="onSelfKilledOther" action="AddBuff" target="self" buff="buffMedicBoost"/>
			</effect_group>
		</perk>
		<perk name="perkMedicSurvivor4" name_key="perkMedicSurvivor4Name" desc_key="perkMedicSurvivor4Desc" max_level="1" icon="icon_sv_medic" parent="skillSurvivor">
			<!--I'm a medic, not doctor-->
			<!--Medic guns entity damage and reload speed increase by 20%. Medic guns degradation reduced by 50%.-->
			<level_requirements level="1">
				<requirement name="ProgressionLevel" progression_name="perkMedic" operation="GTE" value="5" desc_key="reqMedicLevel05"/>
			</level_requirements>
			<effect_group>
				<requirement name="ProgressionLevel" progression_name="perkMedicSurvivor4" operation="GTE" value="1"/>
				<requirement name="ItemHasTags" tags="medicgun"/>
					<passive_effect name="DegradationPerUse" operation="perc_set" value=".5" tags="medicgun">
						<requirement name="CVarCompare" cvar="isHealMode" operation="Equals" value="1"/>
					</passive_effect>
					<passive_effect name="ReloadSpeedMultiplier" operation="perc_add" value=".2"/>
					<passive_effect name="EntityDamage" operation="perc_add" value="0.2"/>
			</effect_group>
			<effect_group>
				<effect_description desc_key="perkMedicSurvivor4Name" long_desc_key="perkMedicSurvivor4LongDesc" level="1"/>
			</effect_group>
			<effect_group>
				<triggered_effect trigger="onPerkLevelChanged" action="DecreaseProgressionLevelAndRefundSP,MedicPerk" progression_name="perkMedicTeamplayer4" level="0">
					<requirement name="ProgressionLevel" progression_name="perkMedicSurvivor4" operation="GTE" value="1"/>
				</triggered_effect>
			</effect_group>
		</perk>
		<perk name="perkMedicSurvivor5" name_key="perkMedicSurvivor5Name" desc_key="perkMedicSurvivor5Desc" max_level="1" icon="icon_sv_zedtime" parent="skillSurvivor">
			<!--I SAY IT'S ZED TIME-->
			<!--Healing darts and grenades have 50% chance to cripple target. Dealing headshot with healing darts knocks down target during zedtime, while hitting them consumes no medic stock.-->
			<level_requirements level="1">
				<requirement name="ProgressionLevel" progression_name="perkMedic" operation="GTE" value="6" desc_key="reqMedicLevel06"/>
			</level_requirements>
			<effect_group>
				<effect_description desc_key="perkMedicSurvivor5Name" long_desc_key="perkMedicSurvivor5LongDesc" level="1"/>
			</effect_group>
			<effect_group>
				<requirement name="ProgressionLevel" progression_name="perkMedicSurvivor5" operation="Equals" value="1"/>
				<requirement name="IsAlive" target="other"/>
				<requirement name="ItemHasTags" tags="medicgun"/>
				<requirement name="CVarCompare" cvar="isHealMode" operation="Equals" value="1"/>
					<triggered_effect trigger="onSelfAttackedOther" action="AddBuff" target="other" target_tags="enemy" buff="buffInjuryCrippled01">
						<requirement name="RandomRoll" seed_type="Random" min_max="0,100" operation="LTE" value="50"/>
					</triggered_effect>
					<triggered_effect trigger="onSelfAttackedOther" action="AddBuff" target="other" target_tags="enemy" buff="buffInjuryKnockdown01">
						<requirement name="HitLocation" body_parts="Head"/>
						<requirement name="!HasBuff" target="other" buff="buffInjuryKnockdown01Cooldown"/>
						<requirement name="HasBuff" target="other" buff="buffZedTime"/>
					</triggered_effect>
					<triggered_effect trigger="onSelfAttackedOther" action="ModifyCVar" target="self" cvar="$medicBuffConsumptionTemp0" operation="set" value="1">
						<requirement name="HasBuff" target="other" buff="buffZedTime"/>
					</triggered_effect>
			</effect_group>
			<effect_group>
				<triggered_effect trigger="onPerkLevelChanged" action="DecreaseProgressionLevelAndRefundSP,MedicPerk" progression_name="perkMedicTeamplayer5" level="0">
					<requirement name="ProgressionLevel" progression_name="perkMedicSurvivor5" operation="GTE" value="1"/>
				</triggered_effect>
			</effect_group>
		</perk>
	</insertBefore>
</configs>