<configs>
	<!-- Custom Loot Groups -->
	<insertAfter xpath="/lootcontainers/lootgroup[@name='empty']">
		<lootgroup name="groupWeaponsT1_MedicWeapon" count="all" loot_quality_template="QLTemplateT1">
			<item name="gunMedicPistol" mods="modMedicModule" mod_chance="1" count="1"/>
		</lootgroup>
		<lootgroup name="groupWeaponsT2_MedicWeapon" count="all" loot_quality_template="QLTemplateT2">
			<item name="gunMedicSMG201" mods="modMedicModule" mod_chance="1" count="1"/>
		</lootgroup>
		<lootgroup name="groupWeaponsT3_MedicWeapon" count="all" loot_quality_template="QLTemplateT3">
			<item name="gunMedicShotgun301" mods="modMedicModule" mod_chance="1" count="1"/>
			<item name="gunMedicAssaultRifle401" mods="modMedicModule" mod_chance="1" count="1"/>
		</lootgroup>
	</insertAfter>

	<append xpath="/lootcontainers/lootgroup[@name='groupQuestWeaponsRangedT1']">
		<item name="gunMedicPistol" mods="modMedicModule" mod_chance="1" count="1"/>
	</append>
	<append xpath="/lootcontainers/lootgroup[@name='groupMilitaryFootlocker02']">
		<item name="gunMedicPistol" mods="modMedicModule" mod_chance="1" count="1" loot_prob_template="veryLow"/>
	</append>
	<append xpath="/lootcontainers/lootgroup[@name='groupQuestWeaponsRangedT2']">
		<item name="gunMedicSMG201" mods="modMedicModule" mod_chance="1" count="1"/>
	</append>
	<append xpath="/lootcontainers/lootgroup[@name='groupQuestWeaponsRangedT3']">
		<item name="gunMedicShotgun301" mods="modMedicModule" mod_chance="1" count="1"/>
		<item name="gunMedicAssaultRifle401" mods="modMedicModule" mod_chance="1" count="1"/>
	</append>
	<append xpath="/lootcontainers/lootgroup[@name='groupInfestedT5MeleeRanged']">
		<item name="gunMedicPistol" mods="modMedicModule" mod_chance="1" count="1"/>
		<item name="gunMedicSMG201" mods="modMedicModule" mod_chance="1" count="1"/>
		<item name="gunMedicShotgun301" mods="modMedicModule" mod_chance="1" count="1"/>
		<item name="gunMedicAssaultRifle401" mods="modMedicModule" mod_chance="1" count="1"/>
	</append>

	<conditional>
		<if cond="mod_loaded('EFT_Overhaul')">
			<append xpath="/lootcontainers/lootgroup[@name='groupPistolsT1']">
				<item name="gunMedicPistol" mods="modMedicModule" mod_chance="1" loot_prob_template="medLow"/>
			</append>
			<append xpath="/lootcontainers/lootgroup[@name='groupSMGT1']">
				<item name="gunMedicSMG201" mods="modMedicModule" mod_chance="1" loot_prob_template="medLow"/>
			</append>
			<append xpath="/lootcontainers/lootgroup[@name='groupShotgunsT2']">
				<item name="gunMedicShotgun301" mods="modMedicModule" mod_chance="1" loot_prob_template="medLow"/>
			</append>
			<append xpath="/lootcontainers/lootgroup[@name='groupRiflesT3']">
				<item name="gunMedicAssaultRifle401" mods="modMedicModule" mod_chance="1" loot_prob_template="medLow"/>
			</append>
		</if>
		<if cond="mod_loaded('EFTX_Pack_Core')">
			<append xpath="/lootcontainers/lootgroup[@name='groupWeaponsT1']">
				<item group="groupWeaponsT1_MedicWeapon"/>
			</append>
			<append xpath="/lootcontainers/lootgroup[@name='groupWeaponsT2']">
				<item group="groupWeaponsT2_MedicWeapon"/>
			</append>
			<append xpath="/lootcontainers/lootgroup[@name='groupWeaponsT3']">
				<item group="groupWeaponsT3_MedicWeapon"/>
			</append>
			<append xpath="/lootcontainers/lootgroup[@name='groupWeaponsT4']">
				<item group="groupWeaponsT3_MedicWeapon"/>
			</append>
			
			<append xpath="/lootcontainers/lootgroup[@name='groupModEftSkillMagazinesAll']">
				<item name="medicgunsSkillMagazine" count="1"/>
			</append>

			<conditional>
				<if cond="mod_version('EFTX_Pack_Core') &gt;= version(2,5,2,5)">
					<append xpath="//lootgroup[@name='groupEFTXPistolsT1']">
						<item name="gunMedicPistol" mods="modMedicModule" mod_chance="1" count="1" quality="1"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXPistolsT2']">
						<item name="gunMedicPistol" mods="modMedicModule" mod_chance="1" count="1" quality="2"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXPistolsT3']">
						<item name="gunMedicPistol" mods="modMedicModule" mod_chance="1" count="1" quality="3"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXPistolsT4']">
						<item name="gunMedicPistol" mods="modMedicModule" mod_chance="1" count="1" quality="4"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXPistolsT5']">
						<item name="gunMedicPistol" mods="modMedicModule" mod_chance="1" count="1" quality="5"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXPistolsT6']">
						<item name="gunMedicPistol" mods="modMedicModule" mod_chance="1" count="1" quality="6"/>
					</append>

					<append xpath="//lootgroup[@name='groupEFTXSMGST1']">
						<item name="gunMedicSMG201" mods="modMedicModule" mod_chance="1" count="1" quality="1"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXSMGST2']">
						<item name="gunMedicSMG201" mods="modMedicModule" mod_chance="1" count="1" quality="2"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXSMGST3']">
						<item name="gunMedicSMG201" mods="modMedicModule" mod_chance="1" count="1" quality="3"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXSMGST4']">
						<item name="gunMedicSMG201" mods="modMedicModule" mod_chance="1" count="1" quality="4"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXSMGST5']">
						<item name="gunMedicSMG201" mods="modMedicModule" mod_chance="1" count="1" quality="5"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXSMGST6']">
						<item name="gunMedicSMG201" mods="modMedicModule" mod_chance="1" count="1" quality="6"/>
					</append>
					
					<append xpath="//lootgroup[@name='groupEFTXShotgunsT1']">
						<item name="gunMedicShotgun301" mods="modMedicModule" mod_chance="1" count="1" quality="1"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXShotgunsT2']">
						<item name="gunMedicShotgun301" mods="modMedicModule" mod_chance="1" count="1" quality="2"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXShotgunsT3']">
						<item name="gunMedicShotgun301" mods="modMedicModule" mod_chance="1" count="1" quality="3"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXShotgunsT4']">
						<item name="gunMedicShotgun301" mods="modMedicModule" mod_chance="1" count="1" quality="4"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXShotgunsT5']">
						<item name="gunMedicShotgun301" mods="modMedicModule" mod_chance="1" count="1" quality="5"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXShotgunsT6']">
						<item name="gunMedicShotgun301" mods="modMedicModule" mod_chance="1" count="1" quality="6"/>
					</append>
					
					<append xpath="//lootgroup[@name='groupEFTXRiflesT1']">
						<item name="gunMedicAssaultRifle401" mods="modMedicModule" mod_chance="1" count="1" quality="1"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXRiflesT2']">
						<item name="gunMedicAssaultRifle401" mods="modMedicModule" mod_chance="1" count="1" quality="2"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXRiflesT3']">
						<item name="gunMedicAssaultRifle401" mods="modMedicModule" mod_chance="1" count="1" quality="3"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXRiflesT4']">
						<item name="gunMedicAssaultRifle401" mods="modMedicModule" mod_chance="1" count="1" quality="4"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXRiflesT5']">
						<item name="gunMedicAssaultRifle401" mods="modMedicModule" mod_chance="1" count="1" quality="5"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXRiflesT6']">
						<item name="gunMedicAssaultRifle401" mods="modMedicModule" mod_chance="1" count="1" quality="6"/>
					</append>
				</if>
			</conditional>
		</if>
		<else>
			<append xpath="/lootcontainers/lootgroup[@name='groupWeaponsT1_Ranged']">
				<item group="groupWeaponsT1_MedicWeapon"/>
			</append>
			<append xpath="/lootcontainers/lootgroup[@name='groupWeaponsT2_Ranged']">
				<item group="groupWeaponsT2_MedicWeapon"/>
			</append>
			<append xpath="/lootcontainers/lootgroup[@name='groupWeaponsT3_Ranged']">
				<item group="groupWeaponsT3_MedicWeapon"/>
			</append>
			
			<!-- Crafting Skill Magazines -->
			<append xpath="/lootcontainers/lootgroup[@name='skillMagazines']">
				<item name="medicgunsSkillMagazine"/>
			</append>
			
			<append xpath="/lootcontainers/lootgroup[@name='groupQuestRewardSkillMagazinesAll01']">
				<item name="medicgunsSkillMagazine" count="2"/>
			</append>
			
			<append xpath="/lootcontainers/lootgroup[@name='survivalMedical']">
				<item name="medicgunsSkillMagazine" loot_prob_template="med"/>
			</append>
			
			<append xpath="/lootcontainers/lootgroup[@name='groupMedicalPileSmall']">
				<item name="medicgunsSkillMagazine" count="0,1" loot_prob_template="med"/>
			</append>
			
			<append xpath="/lootcontainers/lootgroup[@name='groupMedicalPileMed']">
				<item name="medicgunsSkillMagazine" count="0,1" loot_prob_template="med"/>
			</append>
			
			<append xpath="/lootcontainers/lootgroup[@name='groupMedicalPileLarge']">
				<item name="medicgunsSkillMagazine" count="0,1" loot_prob_template="med"/>
			</append>
			
			<append xpath="/lootcontainers/lootgroup[@name='groupPopNPillsBooks']">
				<item name="medicgunsSkillMagazine"/>
			</append>
			
			<append xpath="/lootcontainers/lootgroup[@name='groupPopNPillsCrate02']">
				<item name="medicgunsSkillMagazine" loot_prob_template="high"/>
			</append>
		</else>
	</conditional>
</configs>