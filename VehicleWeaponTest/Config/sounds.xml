<configs>
	<append xpath="/Sounds">
		<SoundDataNode name="plasma_shoot">
			<AudioSource name="Sounds/AudioSource_WeaponFire"/>
			<NetworkAudioSource name="Sounds/AudioSource_WeaponFire_Network"/>
			<Noise ID="0" noise="52" time="2" muffled_when_crouched="0.8" heat_map_strength="0.75" heat_map_time="180"/>
				<AudioClip ClipName="#@modfolder:Resources/laserSounds.unity3d?Small_Oneshot_Laser_v1"/>
				<AudioClip ClipName="#@modfolder:Resources/laserSounds.unity3d?Small_Oneshot_Laser_v2"/>
				<AudioClip ClipName="#@modfolder:Resources/laserSounds.unity3d?Small_Oneshot_Laser_v3"/>
