<configs>
	<conditional>
		<if cond="mod_loaded('EFT_Overhaul')">
		</if>
		<if cond="mod_loaded('EFTX_Pack_Standard')">
			<append xpath="/progression/crafting_skills/crafting_skill[@name='craftingEFTShotguns']/display_entry[contains(@icon, 'gunksg12')]/@icon">,gunT3HZ12</append>
			<append xpath="/progression/crafting_skills/crafting_skill[@name='craftingEFTShotguns']/display_entry[contains(@icon, 'gunksg12')]/unlock_entry[contains(@item, 'gunksg12')]/@item">,gunT3HZ12</append>
			<append xpath="/progression/crafting_skills/crafting_skill[@name='craftingEFTShotguns']/effect_group/passive_effect[contains(@tags, 'gunksg12') and (@name='RecipeTagUnlocked' or @name='CraftingTier')]/@tags">,gunT3HZ12</append>
		</if>
		<else>
			<insertBefore xpath="/progression/crafting_skills/crafting_skill[@name='craftingShotguns']/effect_group[1]">
				<display_entry item="gunT3HZ12" unlock_level="61,68,76,84,92,100" />
			</insertBefore>
			<append xpath="/progression/crafting_skills/crafting_skill[@name='craftingShotguns']/effect_group[1]">
				<passive_effect name="RecipeTagUnlocked" operation="base_set" level="61,100" value="1" tags="gunT3HZ12"/>
				<passive_effect name="CraftingTier" operation="base_add" level="68,76,84,92,100" value="1,2,3,4,5" tags="gunT3HZ12"/>
			</append>
		</else>
	</conditional>

</configs>