<configs>
	<conditional>
		<if cond="mod_loaded('EFT_Overhaul')">
            <append xpath="/lootcontainers/lootgroup[@name='groupInfestedT5MeleeRanged']">
                <item name="gunHandgunT3AF2011A1S"/>
				<item name="gunHandgunT3DualAF2011A1S"/>
            </append>
            <append xpath="/lootcontainers/lootgroup[@name='groupPistolsT1']">
                <item name="gunHandgunT3AF2011A1S" loot_prob_template="medLow"/>
				<item name="gunHandgunT3DualAF2011A1S" loot_prob_template="low"/>
            </append>
            <append xpath="/lootcontainers/lootgroup[@name='groupAmmoPistolCase']">
                <item name="gunHandgunT3AF2011A1S" loot_prob_template="medLow"/>
				<item name="gunHandgunT3DualAF2011A1S" loot_prob_template="low"/>
            </append>
        </if>
		<if cond="mod_loaded('EFTX_Pack_Core')">
			<append xpath="/lootcontainers/lootgroup[@name='groupWeaponsT3']">
				<item name="gunHandgunT3AF2011A1S"/>
			</append>
			<append xpath="/lootcontainers/lootgroup[@name='groupWeaponsT4']">
				<item name="gunHandgunT3DualAF2011A1S"/>
			</append>
			<append xpath="//lootgroup[@name='groupQuestWeaponsRangedT3']">
				<item name="gunHandgunT3AF2011A1S" loot_prob_template="QuestT3Prob"/>
				<item name="gunHandgunT3DualAF2011A1S" loot_prob_template="QuestT3Prob"/>
			</append>

			<conditional>
				<if cond="mod_version('EFTX_Pack_Core') &gt;= version(2,5,2,5)">
					<append xpath="//lootgroup[@name='groupEFTXPistolsT1']">
						<item name="gunHandgunT3AF2011A1S" count="1" quality="1"/>
						<item name="gunHandgunT3DualAF2011A1S" count="1" quality="1" loot_prob_template="low"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXPistolsT2']">
						<item name="gunHandgunT3AF2011A1S" count="1" quality="2"/>
						<item name="gunHandgunT3DualAF2011A1S" count="1" quality="2" loot_prob_template="low"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXPistolsT3']">
						<item name="gunHandgunT3AF2011A1S" count="1" quality="3"/>
						<item name="gunHandgunT3DualAF2011A1S" count="1" quality="3" loot_prob_template="low"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXPistolsT4']">
						<item name="gunHandgunT3AF2011A1S" count="1" quality="4"/>
						<item name="gunHandgunT3DualAF2011A1S" count="1" quality="4" loot_prob_template="low"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXPistolsT5']">
						<item name="gunHandgunT3AF2011A1S" count="1" quality="5"/>
						<item name="gunHandgunT3DualAF2011A1S" count="1" quality="5" loot_prob_template="low"/>
					</append>
					<append xpath="//lootgroup[@name='groupEFTXPistolsT6']">
						<item name="gunHandgunT3AF2011A1S" count="1" quality="6"/>
						<item name="gunHandgunT3DualAF2011A1S" count="1" quality="6" loot_prob_template="low"/>
					</append>

					<conditional>
						<if cond="mod_loaded('Z9_EFTX_Lootable_Zs')">
							<append xpath="//lootgroup[@name='GroupArlenePistolsT1']">
								<item name="gunHandgunT3AF2011A1S" count="1" quality="1"/>
							</append>
							<append xpath="//lootgroup[@name='GroupArlenePistolsT2']">
								<item name="gunHandgunT3AF2011A1S" count="1" quality="2"/>
							</append>
							<append xpath="//lootgroup[@name='GroupArlenePistolsT3']">
								<item name="gunHandgunT3AF2011A1S" count="1" quality="3"/>
							</append>
							<append xpath="//lootgroup[@name='GroupArlenePistolsT4']">
								<item name="gunHandgunT3AF2011A1S" count="1" quality="4"/>
							</append>
							<append xpath="//lootgroup[@name='GroupArlenePistolsT5']">
								<item name="gunHandgunT3AF2011A1S" count="1" quality="5"/>
							</append>
							<append xpath="//lootgroup[@name='GroupArlenePistolsT6']">
								<item name="gunHandgunT3AF2011A1S" count="1" quality="6"/>
							</append>
						</if>
					</conditional>
				</if>
			</conditional>
		</if>
		<else>
			<insertAfter xpath="/lootcontainers/lootgroup[@name='empty']">
				<lootgroup name="groupWeaponsT3_GunslingerAF2011A1S" count="1" loot_quality_template="QLTemplateT2">
					<item name="gunHandgunT3DualAF2011A1S" loot_prob_template="low"/>
					<item name="gunHandgunT3AF2011A1S"/>
				</lootgroup>
			</insertAfter>
			<append xpath="/lootcontainers/lootgroup[@name='groupWeaponsT3_Gunslinger']">
				<item group="groupWeaponsT3_GunslingerAF2011A1S"/>
			</append>
			<append xpath="/lootcontainers/lootgroup[@name='groupQuestWeaponsRangedT3']">
				<item name="gunHandgunT3DualAF2011A1S"/>
				<item name="gunHandgunT3AF2011A1S"/>
			</append>
			<append xpath="/lootcontainers/lootgroup[@name='groupInfestedT5MeleeRanged']">
				<item name="gunHandgunT3DualAF2011A1S"/>
				<item name="gunHandgunT3AF2011A1S"/>
			</append>
		</else>
	</conditional>
</configs>