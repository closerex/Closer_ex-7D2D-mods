<configs>
	<conditional>
		<if cond="mod_loaded('EFT8_DVS_Configs')">
            <append xpath="/lootcontainers/lootgroup[@name='groupWeaponsT3']">
                <item name="meleeWpnBladeT3KF2Eviscerator"/>
            </append>
            <append xpath="/lootcontainers/lootgroup[@name='groupShotgunsT3']">
                <item name="meleeWpnBladeT3KF2Eviscerator"/>
            </append>
        </if>
        <if cond="mod_loaded('EFTX_Pack_Core')">
            <insertAfter xpath="/lootcontainers/lootgroup[@name='empty']">
                <lootgroup name="groupWeaponsT3_Eviscerator" count="all" loot_quality_template="QLTemplateT3">
                    <item name="meleeWpnBladeT3KF2Eviscerator" />
                </lootgroup>
            </insertAfter>
			<append xpath="//lootgroup[@name='groupWeaponsT3_Archery']">
				<item group="groupWeaponsT3_Eviscerator"/>
			</append>
			<append xpath="//lootgroup[@name='groupWeaponsT3']">
				<item name="meleeWpnBladeT3KF2Eviscerator" count="1" quality="3"/>
			</append>
			<append xpath="//lootgroup[@name='groupQuestWeaponsRangedT3']">
				<item name="meleeWpnBladeT3KF2Eviscerator" loot_prob_template="QuestT3Prob"/>
			</append>
            <append xpath="/lootcontainers/lootgroup[@name='groupCrossbowBoltSmall']">
                <item name="ammoEvisceratorSawBlade" count="4,6" loot_stage_count_mod="0.01" loot_prob_template="ProbT3Cap" />
            </append>
            <append xpath="/lootcontainers/lootgroup[@name='groupCrossbowBoltMedium']">
                <item name="ammoEvisceratorSawBlade" count="8,12" loot_stage_count_mod="0.01" loot_prob_template="ProbT3Cap" />
            </append>
            <append xpath="/lootcontainers/lootgroup[@name='groupCrossbowBoltLarge']">
                <item name="ammoEvisceratorSawBlade" count="16,24" loot_stage_count_mod="0.01" loot_prob_template="ProbT3Cap" />
            </append>
        </if>
        <else>
            <insertAfter xpath="/lootcontainers/lootgroup[@name='empty']">
                <lootgroup name="groupWeaponsT3_Eviscerator" count="all" loot_quality_template="QLTemplateT3">
                    <item name="meleeWpnBladeT3KF2Eviscerator"/>
                </lootgroup>
                <lootgroup name="twitch_Eviscerator" count="2" loot_quality_template="QLTemplateT3">
                    <item name="meleeWpnBladeT3KF2Eviscerator" count="1"/>
                    <item name="ammoEvisceratorSawBlade" count="5,10"/>
                </lootgroup>
            </insertAfter>
            <append xpath="/lootcontainers/lootgroup[@name='groupWeaponsT3_Archery']">
                <item group="groupWeaponsT3_Eviscerator"/>
            </append>
            <append xpath="/lootcontainers/lootgroup[@name='groupQuestWeaponsRangedT3']">
                <item name="meleeWpnBladeT3KF2Eviscerator"/>
            </append>
            <append xpath="/lootcontainers/lootgroup[@name='groupInfestedT5MeleeRanged']">
                <item name="meleeWpnBladeT3KF2Eviscerator"/>
            </append>
            <append xpath="/lootcontainers/lootgroup[@name='twitch_tier3ranged']">
                <item group="twitch_Eviscerator"/>
            </append>
            <append xpath="/lootcontainers/lootgroup[@name='groupCrossbowBoltSmall']">
                <item name="ammoEvisceratorSawBlade" count="4,6" loot_stage_count_mod="0.01" loot_prob_template="ProbT3Cap" />
            </append>
            <append xpath="/lootcontainers/lootgroup[@name='groupCrossbowBoltMedium']">
                <item name="ammoEvisceratorSawBlade" count="8,12" loot_stage_count_mod="0.01" loot_prob_template="ProbT3Cap" />
            </append>
            <append xpath="/lootcontainers/lootgroup[@name='groupCrossbowBoltLarge']">
                <item name="ammoEvisceratorSawBlade" count="16,24" loot_stage_count_mod="0.01" loot_prob_template="ProbT3Cap" />
            </append>
        </else>
    </conditional>
</configs>