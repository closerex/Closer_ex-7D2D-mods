<configs>
  
	<conditional>
		<if cond="mod_loaded('EFTX_Pack_Standard')">
			<append xpath="/progression/crafting_skills/crafting_skill[@name='craftingEFTShotguns']/display_entry[contains(@icon, 'gunm3benelli')]/@icon">,gunT3M4Benelli</append>
			<append xpath="/progression/crafting_skills/crafting_skill[@name='craftingEFTShotguns']/display_entry[contains(@icon, 'gunm3benelli')]/unlock_entry[contains(@item, 'gunm3benelli')]/@item">,gunT3M4Benelli</append>
			<append xpath="/progression/crafting_skills/crafting_skill[@name='craftingEFTShotguns']/effect_group/passive_effect[contains(@tags, 'gunm3benelli') and (@name='RecipeTagUnlocked' or @name='CraftingTier')]/@tags">,gunT3M4Benelli</append>
		</if>
		<else>
			<insertBefore xpath="/progression/crafting_skills/crafting_skill[@name='craftingShotguns']/effect_group[1]">
				<display_entry item="gunT3M4Benelli" unlock_level="61,68,76,84,92,100" />
			</insertBefore>
			<append xpath="/progression/crafting_skills/crafting_skill[@name='craftingShotguns']/effect_group[1]">
				<passive_effect name="RecipeTagUnlocked" operation="base_set" level="61,100" value="1" tags="gunT3M4Benelli"/>
				<passive_effect name="CraftingTier" operation="base_add" level="68,76,84,92,100" value="1,2,3,4,5" tags="gunT3M4Benelli"/>
			</append>
		</else>
	</conditional>

</configs>