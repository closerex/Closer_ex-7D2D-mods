<configs>
	<!-- Reflex -->
	<append xpath="/item_modifiers/item_modifier[@name='modGunReflexSight']">
		<item_property_overrides name="gunDevotionLMG">
			<property name="ScopeCameraOffset" value="0,-.0125,0"/>
			<property name="CrosshairOnAim" value="false"/>
		</item_property_overrides>
		<effect_group tiered="false" name="apex attachments">
			<requirement name="HoldingItemHasTags" tags="ApexWeapon"/>
				<triggered_effect trigger="onSelfHoldingItemCreated" action="SetTransformActive" active="false" parent_transform="#HeldItemRoot" transform_path="ironsight"/>
				<triggered_effect trigger="onSelfHoldingItemCreated" action="SetTransformActive" active="false" parent_transform="#HeldItemRoot" transform_path="holosight/Activator"/>
				<triggered_effect trigger="onSelfAimingGunStart" action="SetTransformActive" active="true" parent_transform="#HeldItemRoot" transform_path="holosight/Activator"/>
				<triggered_effect trigger="onSelfAimingGunStop" action="SetTransformActive" active="false" parent_transform="#HeldItemRoot" transform_path="holosight/Activator"/>
		</effect_group>
	</append>
	
	<!-- Scope 2x -->
	<append xpath="/item_modifiers/item_modifier[@name='modGunScopeSmall']">
		<item_property_overrides name="gunDevotionLMG">
			<property name="Zoom_overlay" value=""/>
			<property name="CrosshairOnAim" value="false"/>
			<property name="ScopeCameraOffset" value="0,-.0231,0"/>
		</item_property_overrides>
		<effect_group tiered="false" name="apex attachments">
			<requirement name="HoldingItemHasTags" tags="ApexWeapon"/>
				<triggered_effect trigger="onSelfHoldingItemCreated" action="SetTransformActive" active="true" parent_transform="#HeldItemRoot" transform_path="scope/scope2x"/>
				<triggered_effect trigger="onSelfHoldingItemCreated" action="SetTransformActive" active="false" parent_transform="#HeldItemRoot" transform_path="ironsight"/>
				<triggered_effect trigger="onSelfHoldingItemCreated" action="SetTransformActive" active="false" parent_transform="#HeldItemRoot" transform_path="scope/scope2x/Activator"/>
				<triggered_effect trigger="onSelfAimingGunStart" action="SetTransformActive" active="true" parent_transform="#HeldItemRoot" transform_path="scope/scope2x/Activator"/>
				<triggered_effect trigger="onSelfAimingGunStop" action="SetTransformActive" active="false" parent_transform="#HeldItemRoot" transform_path="scope/scope2x/Activator"/>
		</effect_group>
	</append>
	
	<!-- Scope 4x -->
	<append xpath="/item_modifiers/item_modifier[@name='modGunScopeMedium']">
		<item_property_overrides name="gunDevotionLMG">
			<property name="Zoom_overlay" value=""/>
			<property name="CrosshairOnAim" value="false"/>
			<property name="ScopeCameraOffset" value="-.00017,-.0179,0.075"/>
		</item_property_overrides>
		<effect_group tiered="false" name="apex attachments">
			<requirement name="HoldingItemHasTags" tags="ApexWeapon"/>
				<triggered_effect trigger="onSelfHoldingItemCreated" action="SetTransformActive" active="true" parent_transform="#HeldItemRoot" transform_path="scope/scope4x"/>
				<triggered_effect trigger="onSelfHoldingItemCreated" action="SetTransformActive" active="false" parent_transform="#HeldItemRoot" transform_path="ironsight"/>
				<triggered_effect trigger="onSelfHoldingItemCreated" action="SetTransformActive" active="false" parent_transform="#HeldItemRoot" transform_path="scope/scope4x/Activator"/>
				<triggered_effect trigger="onSelfAimingGunStart" action="SetTransformActive" active="true" parent_transform="#HeldItemRoot" transform_path="scope/scope4x/Activator"/>
				<triggered_effect trigger="onSelfAimingGunStop" action="SetTransformActive" active="false" parent_transform="#HeldItemRoot" transform_path="scope/scope4x/Activator"/>
		</effect_group>
	</append>
	
	<!-- Muzzle Brake -->
	<append xpath="/item_modifiers/item_modifier[@name='modGunMuzzleBrake']">
		<effect_group tiered="false" name="apex attachments">
			<requirement name="HoldingItemHasTags" tags="ApexWeapon"/>
				<triggered_effect trigger="onSelfHoldingItemCreated" action="SetTransformActive" active="true" parent_transform="#HeldItemRoot" transform_path="brake"/>
		</effect_group>
	</append>
	
	<!-- Barrel Extender -->
	<append xpath="/item_modifiers/item_modifier[@name='modGunBarrelExtender']">
		<effect_group tiered="false" name="apex attachments">
			<requirement name="HoldingItemHasTags" tags="ApexWeapon"/>
				<triggered_effect trigger="onSelfHoldingItemCreated" action="SetTransformActive" active="true" parent_transform="#HeldItemRoot" transform_path="extender"/>
		</effect_group>
	</append>

	<!-- Bipod -->
	<append xpath="/item_modifiers/item_modifier[@name='modGunBipod']">
		<effect_group tiered="false" name="apex attachments">
			<requirement name="HoldingItemHasTags" tags="ApexWeapon"/>
				<triggered_effect trigger="onSelfHoldingItemCreated" action="SetTransformActive" active="true" parent_transform="#HeldItemRoot" transform_path="bipod"/>
		</effect_group>
	</append>
	
	<!-- Silencer -->
	<append xpath="/item_modifiers/item_modifier[@name='modGunSoundSuppressorSilencer']">
		<item_property_overrides name="gunDevotionLMG">
			<property name="Sound_start" value="devotion_s_fire"/>
			<property name="Sound_loop" value="devotion_s_fire"/>
		</item_property_overrides>
	</append>
	
	<!-- Hop-up -->
	<append xpath="/item_modifiers">
		<item_modifier name="modTurboCharger" installable_tags="TurboCharger" modifier_tags="hopup" blocked_tags="noMods" type="attachment">
			<property name="Extends" value="modGeneralMaster"/>
			<property name="CustomIcon" value="Turbocharger"/>
			<property name="UnlockedBy" value="perkAutoWeaponsDrumMag"/>
			<item_property_overrides name="gunDevotionLMG">
				<property name="RampTime" value="0.75"/>
				<property name="RampStartSound" value="devotion_ramp_turbo"/>
				<property name="MinRampShots" value="1"/>
			</item_property_overrides>
		</item_modifier>
	</append>
</configs>